#!/bin/bash

~/.local/share/ov/pkg/isaac_sim-*/python.sh \
    scripts/train_rlgames.py \
    task='Curriculum' \
    train='ContextQVecSAC' \
    max_iterations=10000 \
    headless=True \
    num_envs=128 \
    task.task.actionMode='continuous_std_4' \
    test=False \
    experiment=Curriculum_ContextQVecSAC

~/.local/share/ov/pkg/isaac_sim-*/python.sh \
    scripts/train_rlgames.py \
    task='Horizontal' \
    train='ContextQVecSAC' \
    max_iterations=10000 \
    headless=True \
    num_envs=128 \
    task.task.actionMode='continuous_std_4' \
    test=False \
    experiment=Horizontal_ContextQVecSAC

~/.local/share/ov/pkg/isaac_sim-*/python.sh \
    scripts/train_rlgames.py \
    task='Horizontal' \
    train='RlgamesSAC' \
    max_iterations=10000 \
    headless=True \
    num_envs=128 \
    task.task.actionMode='continuous_std_4' \
    test=False \
    experiment=Horizontal_RlgamesSAC



