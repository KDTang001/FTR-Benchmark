#!/bin/bash


algo=SAC
asset='terrain_steps.yaml'
action_mode=continuous_std_6
e_dir=runs/test

~/.local/share/ov/pkg/isaac_sim-*/python.sh \
    scripts/train_sarl.py \
    task='Benchmark' \
    train="BM_${algo}" \
    max_iterations=3000 \
    headless=True \
    num_envs=128 \
    task.asset="./assets/config/${asset}" \
    task.task.actionMode="$action_mode" \
    test=False \
    rl_device=cpu \
    sim_device=cpu \
    experiment=${e_dir}






