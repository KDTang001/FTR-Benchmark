#!/bin/bash

user=zhc
ip="192.168.1.152"

if [ "$1" = "all" ]; then
  name=$(ls | grep -v logs | grep -v runs | grep -v docs | grep -v jupyter)
elif [ "$1" = "code" ]; then
  name=$(ls | grep -v logs | grep -v runs | grep -v docs | grep -v jupyter | grep -v deps)
else
  name=$(git status -s | grep 'M ' | awk '{print $2}')
fi

echo 'upload list:' $name

for i in $name
do
  scp -r $(realpath .)/$i $user@$ip:~/isaacsim_prj/pumbaa_task/$(dirname $i)
done

